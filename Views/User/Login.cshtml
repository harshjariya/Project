@{
    ViewData["Title"] = "Login Page";
}
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Management System - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            max-width: 400px;
            margin: 50px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .login-container img {
                width: 80px;
                margin-bottom: 15px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <img src="https://cdn-icons-png.flaticon.com/512/4283/4283685.png" alt="Quiz Icon">
            <h4 class="mb-3">Quiz Management System</h4>
            <h5 class="mb-3">Login to Your Account</h5>
            <p class="text-muted">Enter your username & password to login</p>
            <form method="post" asp-controller="User" asp-action="UserLogin" novalidate>
                <div class="mb-3 text-start">
                    <label asp-for="Username" for="username" class="form-label">Username</label>
                    <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Enter username">
                    <span asp-validation-for="Username" class="text-danger"></span>

                </div>
                <div class="mb-3 text-start">
                    <label asp-for="Password" for="password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <p class="mt-3">Don't have an account? <a asp-action="Register" asp-controller="User">Create an account</a></p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
