@model DataTable
@using System.Data
<main id="main" class="main">
    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <span class="text-danger">@TempData["SuccessMessage"]</span>
    <div class="pagetitle">
        <h1>Question List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Question</li>
                <li class="breadcrumb-item active">Question List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body text text-primary">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Search</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>Question Name</label>
                                <div class="">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label>Min Question</label>
                                <div class="">
                                    <input type="number" class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label>Max Question</label>
                                <div class="">
                                    <input type="number" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>From Question Date</label>
                                <div class="col">
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label>To Question Date</label>
                                <div class="col">
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                        <div class="row">
                            <div class="col my-3">
                                <a class="btn btn-success ">Search</a>
                                <a class="btn btn-danger ">Reset</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-10">
                                <h5 class="card-title">Question List</h5>
                            </div>
                            <div class="col-2"> <a class="btn btn-primary my-3" asp-controller="Question" asp-action="AddQuestion">Add Question</a></div>
                        </div>



                        <!-- Table with stripped rows -->
                        <div class="table-responsive">
                        <table class="table table-striped datatable">
                            <thead>
                                <tr>
                                    <th scope="col">QuestionId</th>
                                    <th scope="col">QuestionText</th>
                                    <th scope="col">QuestionLevelId</th>
                                    <th scope="col">OptionA</th>
                                    <th scope="col">OptionB</th>
                                    <th scope="col">OptionC</th>
                                    <th scope="col">OptionD</th>
                                    <th scope="col">CorrectOption</th>
                                    <th scope="col">QuestionMarks</th>
                                    <th scope="col">IsActive</th>
                                    <th scope="col">UserId</th>
                                    <th scope="col">Created</th>
                                    <th scope="col">Modified</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                    <tr>
                                        <td>@dataRow["QuestionId"]</td>
                                        <td>@dataRow["QuestionText"]</td>
                                        <td>@dataRow["QuestionLevelId"]</td>
                                        <td>@dataRow["OptionA"]</td>
                                        <td>@dataRow["OptionB"]</td>
                                        <td>@dataRow["OptionC"]</td>
                                        <td>@dataRow["OptionD"]</td>
                                        <td>@dataRow["CorrectOption"]</td>
                                        <td>@dataRow["QuestionMarks"]</td>
                                        <td>@dataRow["IsActive"]</td>
                                        <td>@dataRow["UserId"]</td>
                                        <td>@dataRow["Created"]</td>
                                        <td>@dataRow["Modified"]</td>
                                        <td>
                                                <a asp-controller="Question" asp-action="AddQuestion" asp-route-QuestionID="@dataRow["QuestionID"]" class="btn btn-primary btn-sm" style="padding: 2px 6px; font-size: 12px;">
                                                    <i class="bi bi-pencil-fill"> Edit</i>
                                                </a>
                                                <a asp-controller="Question" asp-action="QuestionDelete" asp-route-QuestionID="@dataRow["QuestionID"]" class="btn btn-outline-danger btn-xs" onclick="return confirm('Are you sure you want to delete Question?');">
                                                    <i class="bi bi-x-lg"></i>
                                                </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                       </div>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->