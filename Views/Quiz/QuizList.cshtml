@model DataTable
@using System.Data
<main id="main" class="main">
    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <span class="text-danger">@TempData["SuccessMessage"]</span>
    <div class="pagetitle">
        <h1>Quiz List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Quiz</li>
                <li class="breadcrumb-item active">Quiz List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <form method="post" asp-action="QuizFilter" asp-controller="Quiz">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body text text-primary">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Search</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>Quiz Name</label>
                                <div class="">
                                        <input name="QuizName" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label>Min Question</label>
                                <div class="">
                                        <input name="MinQuestion" type="number" class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label>Max Question</label>
                                <div class="">
                                        <input name="MaxQuestion" type="number" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>From Quiz Date</label>
                                <div class="col">
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label>To Quiz Date</label>
                                <div class="col">
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                        <div class="row">
                            <div class="col my-3">
                                    <button class="btn btn-success" type="submit">Search</button>
                                <a class="btn btn-danger ">Reset</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>
    </form>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-10">
                                <h5 class="card-title">Quiz List</h5>
                            </div>
                            <div class="col-2"> <a class="btn btn-primary my-3" asp-controller="Quiz" asp-action="AddQuiz">Add Quiz</a></div>
                        </div>



                        <!-- Table with stripped rows -->
                        <table class="table table-striped datatable">
                            <thead>
                                <tr>
                                    <th>QuizID</th>
                                    <th>
                                        <b>Quiz Name</b>
                                    </th>
                                    <th>Total Questions</th>
                                    <th data-type="date-time" data-format="YYYY/DD/MM">Quiz Date</th>
                                    <th>UserID</th>
                                    <th>Created</th>
                                    <th>Modified</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                    <tr>
                                        <td>@dataRow["QuiziD"]</td>
                                        <td>@dataRow["QuizName"]</td>
                                        <td>@dataRow["TotalQuestions"]</td>
                                        <td>@dataRow["QuizDate"]</td>
                                        <td>@dataRow["UserID"]</td>
                                        <td>@dataRow["Created"]</td>
                                        <td>@dataRow["Modified"]</td>
                                        <td>
                                            <a asp-controller="Quiz" asp-action="AddQuiz" asp-route-QuizID="@dataRow["QuizID"]" 
                                                class="btn btn-primary btn-sm" style="padding: 2px 6px; font-size: 12px;">
                                                <i class="bi bi-pencil-fill"> Edit</i>
                                            </a>
                                            <a asp-controller="Quiz" asp-action="QuizDelete" asp-route-QuizID="@dataRow["QuizID"]" 
                                                class="btn btn-outline-danger btn-xs" 
                                                onclick="return confirm('Are you sure you want to delete user?');">
                                                <i class="bi bi-x-lg"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->